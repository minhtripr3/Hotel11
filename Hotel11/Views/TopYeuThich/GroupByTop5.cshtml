@model IEnumerable<Hotel11.Models.Top5YeuThich>
@{
    ViewBag.Title = "GroupByTop5";
    Layout = "~/Views/Shared/_main.cshtml";
}

<style>
    body {
        background-color: #ffffff; /* White background */
        color: #333; /* Black text color */
    }

    h2 {
        color: #e82574; /* Primary heading color */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #e82574; /* Primary border color */
        padding: 12px; /* Increased padding for better readability */
        text-align: left;
    }

    th {
        background-color: #e82574; /* Primary table header background color */
        color: #ffffff; /* White table header text color */
    }

    td img {
        max-width: 100px;
        max-height: 100px;
    }

    .btn-default {
        background-color: #e82574; /* Primary button background color */
        color: #ffffff; /* White button text color */
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-default:hover {
        background-color: #d71a67; /* Slightly darker primary color on hover */
    }

    .nav__bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }

    .nav__links {
        list-style: none;
        display: flex;
        gap: 20px;
        margin: 0;
        padding: 0;
    }

    .nav__links li {
        margin: 0;
    }

    .nav__links a {
        color: #333;
        text-decoration: none;
        padding: 0.9rem 1.5rem;
        border-radius: 5px;
        transition: 0.3s;
    }

    .nav__links a:hover {
        background-color: #e82574;
        color: #ffffff;
    }

    header .header__container {
        text-align: center;
        padding: 40px 20px;
    }

    header .header__container h1 {
        margin: 20px 0;
    }

    .container {
        padding: 20px;
    }

    media (max-width: 768px) {
        .nav__bar {
            flex-direction: column;
        }

        .nav__links {
            flex-direction: column;
            align-items: center;
        }

        table {
            font-size: 14px;
        }

        th, td {
            padding: 8px;
        }

        td img {
            max-width: 80px;
            max-height: 80px;
        }
    }
</style>

<header class="header">
    <nav>
        <div class="nav__bar">
            <div class="logo">
                <a href="#"><img src="~/Images/logo.png" alt="logo" /></a>
            </div>
            <ul class="nav__links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#service">Services</a></li>
                <li><a href="#explore">Explore</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="@Url.Action("Register", "Users")">Đăng kí</a></li>
                <li><a href="@Url.Action("Login", "Users")" class="btn nav__btn">Đăng nhập</a></li>
            </ul>
        </div>
    </nav>
    <div class="section__container header__container" id="home">
        <p>Simple - Unique - Friendly</p>
        <h1>Make Yourself At Home<br />In Our <span>Hotel</span>.</h1>
    </div>
</header>

<div class="container">
    <table>
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Hình sản phẩm</th>
                <th>Giá</th>
                <th>Tổng số lượng</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => i.IDPro)</td>
                    <td>@Html.DisplayFor(model => i.NamePro)</td>
                    <td><img src="~/Images/@Url.Content(i.ImgPro)" alt="@i.NamePro" /></td>
                    <td>@Html.DisplayFor(model => i.pricePro) VNĐ</td>
                    <td>@Html.DisplayFor(model => i.Sum_Quantity)</td>
                    <td><a href="/ProductsCus/Details/@i.IDPro" class="btn btn-default">Buy</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include Bootstrap JS for better compatibility -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>



