            list-style: none;
            padding: 0;
            margin: 0;
        }

        .bt-item {
            margin-right: 10px; /* Thêm khoảng cách giữa các nút nếu cần */
        }

            .bt-item label {
                display: flex;
                justify-content: center;
                align-items: center;
                width: 126px;
                height: 40px;
                cursor: pointer;
                background: #f0f0f0; /* Màu nền cho dễ nhìn */
            }

            .bt-item input:checked + label {
                background: #2cbdb8;
                color: #ffffff;
            }
        .property-sidebar .nice-select {
            width: 100%;
            height: 50px;
            background: #F2F4F5;
            border-radius: 0;
            border: 1px solid #ebebeb;
            line-height: 46px;
            margin-bottom: 20px;
        }
        .custom-select {
            width: 100px;
            height: 40px;
            margin-bottom: 10px; /* Thêm khoảng cách dưới nếu cần */
        }
        .sidebar-btn, .price-range-wrap, .search-property-wrap {
            display: flex;
        }

        .bt-item, .price-text, .search-property-wrap {
            width: 50%;
            float: left;
        }

        .button-label {
            display: inline-block;
            width: 126px;
            height: 40px;
            line-height: 40px;
            text-align: center;
            cursor: pointer;
            background: #2cbdb8; /* Bạn có thể thay đổi màu sắc tại đây nếu cần */
            color: #ffffff; /* Màu chữ */
            margin: 5px 0; /* Khoảng cách trên dưới */
            border-radius: 5px; /* Bo góc nếu cần */
        }

        .search-btn {
            background: #2cbdb8; /* Bạn có thể thay đổi màu sắc tại đây nếu cần */
            color: #ffffff; /* Màu chữ */
            width: 100%;
            height: 40px;
            line-height: 40px;
            text-align: center;
            cursor: pointer;
            margin: 10px 0; /* Khoảng cách trên dưới */
            border-radius: 5px; /* Bo góc nếu cần */
            border: none; /* Xóa viền nút */
        }
        .ba-item {
            display: flex; /* Sử dụng flexbox để căn chỉnh các phần tử con */
            align-items: center; /* Căn dọc các phần tử con vào giữa */
            text-decoration: none; /* Loại bỏ gạch chân mặc định cho các liên kết */
            padding: 10px; /* Để có khoảng cách xung quanh các phần tử */
        }

        .ba-pic {
            flex: 0 0 80px; /* Đặt kích thước cố định cho hình ảnh (rộng 80px, cao mặc định) */
            margin-right: 10px; /* Để tạo khoảng cách giữa hình ảnh và văn bản */
        }

            .ba-pic img {
                width: 100%; /* Để hình ảnh chiếm hết phần định sẵn của nó */
                height: auto; /* Đảm bảo tỷ lệ hình ảnh tự động */
            }

        .ba-text {
            flex: 1; /* Để phần văn bản chiếm phần còn lại của không gian */
        }

            .ba-text h5 {
                margin: 0; /* Loại bỏ margin mặc định của tiêu đề */
            }

        .property-items {
            margin: 5px 0; /* Để tạo khoảng cách giữa các mục văn bản */
        }
    </style>
</head>
