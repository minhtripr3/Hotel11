@model IEnumerable<Hotel11.Models.Quanly>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table-container {
        width: 1000px;
        margin: 0 auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ff69b4; /* Pink color border */
            text-align: center;
            padding: 8px;
        }

        .table th {
            background-color: #f2f2f2;
        }

    .action-links a {
        border-radius: 3px;
        background-color: #e82574;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
    }

    .action-links1 a {
        color: #e82574;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 3px;
        margin-right: 5px;
        margin-bottom: 50px;
    }

    .action-links a:hover {
        background-color: #d1145c;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderRoom.NameCus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.NamePro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderRoom.NameCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.NamePro)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
